    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleHeaderImage">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/chipAll"
                android:layout_width="92dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_chip_selected"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chipAllIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="All"
                    android:src="@drawable/ic_calendar_outline"
                    android:tint="@color/au_red" />

                <TextView
                    android:id="@+id/chipAllText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="All"
                    android:textColor="@color/au_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chipClasses"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_chip_default"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chipClassesIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="Classes"
                    android:src="@drawable/ic_book"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/chipClassesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Classes"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chipExams"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_chip_default"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chipExamsIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="Exams"
                    android:src="@drawable/ic_cap"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/chipExamsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Exams"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chipSeminars"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_chip_default"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chipSeminarsIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="Seminars"
                    android:src="@drawable/ic_doc"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/chipSeminarsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Seminars"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintBottom_toTopOf="@id/bottomNav" />

    <LinearLayout
        android:id="@+id/emptyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="18dp"
        android:background="@color/au_event_card_bg"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterScroll">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/au_event_border"
            android:contentDescription="Empty"
            android:padding="14dp"
            android:src="@drawable/ic_calendar_outline"
            android:tint="@color/au_event_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="No upcoming events"
            android:textColor="@color/au_text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="Add your first class, exam, or seminar"
            android:textColor="@color/au_text_muted"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/addEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_add_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="22dp"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Add Event"
                android:src="@drawable/ic_plus"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Add Event"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="@drawable/bg_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home_outline"
                android:tint="@color/au_text_muted" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Home"
                android:textColor="@color/au_text_muted"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_nav_selected"
                android:foregroundGravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:contentDescription="Schedule"
                    android:src="@drawable/ic_calendar_outline"
                    android:tint="@color/au_red" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Schedule"
                android:textColor="@color/au_red"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile_outline"
                android:tint="@color/au_text_muted" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Profile"
                android:textColor="@color/au_text_muted"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
