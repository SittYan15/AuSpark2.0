<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/au_background"
    tools:context=".AddEventActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_header_round"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Event"
                android:textColor="@color/au_text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create new schedule item"
                android:textColor="@color/au_text_muted"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="90dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Type"
                    android:textColor="@color/au_text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/typeClass"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_chip_selected_blue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/typeClassIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:contentDescription="Class"
                            android:src="@drawable/ic_book"
                            android:tint="@color/au_chip_blue" />

                        <TextView
                            android:id="@+id/typeClassText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Class"
                            android:textColor="@color/au_chip_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeExam"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_chip_unselected"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/typeExamIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:contentDescription="Exam"
                            android:src="@drawable/ic_cap"
                            android:tint="@color/au_muted_icon" />

                        <TextView
                            android:id="@+id/typeExamText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Exam"
                            android:textColor="@color/au_muted_icon"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typeSeminar"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_chip_unselected"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/typeSeminarIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:contentDescription="Seminar"
                            android:src="@drawable/ic_doc"
                            android:tint="@color/au_muted_icon" />

                        <TextView
                            android:id="@+id/typeSeminarText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Seminar"
                            android:textColor="@color/au_muted_icon"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textColor="@color/au_text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Title *"
                    android:textColor="@color/au_text_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_outline"
                    android:paddingHorizontal="14dp"
                    android:hint="Enter class title"
                    android:inputType="text"
                    android:textColor="@color/au_text_dark"
                    android:textColorHint="@color/au_text_muted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Date *"
                    android:textColor="@color/au_text_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/dateField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_outline"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:id="@+id/dateValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="dd/mm/yyyy"
                        android:textColor="@color/au_text_muted"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="Calendar"
                        android:src="@drawable/ic_calendar_outline"
                        android:tint="@color/au_text_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Time *"
                            android:textColor="@color/au_text_dark"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/startTimeField"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_input_outline"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="14dp">

                            <TextView
                                android:id="@+id/startTimeValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="--:--"
                                android:textColor="@color/au_text_muted"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="Time"
                                android:src="@drawable/ic_schedule"
                                android:tint="@color/au_text_dark" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Time *"
                            android:textColor="@color/au_text_dark"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/endTimeField"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_input_outline"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="14dp">

                            <TextView
                                android:id="@+id/endTimeValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="--:--"
                                android:textColor="@color/au_text_muted"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="Time"
                                android:src="@drawable/ic_schedule"
                                android:tint="@color/au_text_dark" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Location"
                    android:textColor="@color/au_text_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/locationInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_outline"
                    android:paddingHorizontal="14dp"
                    android:hint="Room 101, Building A"
                    android:inputType="text"
                    android:textColor="@color/au_text_dark"
                    android:textColorHint="@color/au_text_muted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Description"
                    android:textColor="@color/au_text_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_outline"
                    android:gravity="top"
                    android:padding="14dp"
                    android:hint="Add notes or description"
                    android:inputType="textMultiLine"
                    android:textColor="@color/au_text_dark"
                    android:textColorHint="@color/au_text_muted" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="Reminders"
                        android:src="@drawable/ic_bell" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Smart Reminders"
                        android:textColor="@color/au_text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Get notified before your class"
                    android:textColor="@color/au_text_muted"
                    android:textSize="13sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="1 day before"
                    android:textColor="@color/au_text_dark" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour before"
                    android:textColor="@color/au_text_dark" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 minutes before"
                    android:textColor="@color/au_text_dark"
                    android:checked="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 minutes before"
                    android:textColor="@color/au_text_dark"
                    android:checked="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 minutes before"
                    android:textColor="@color/au_text_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="Recurring"
                        android:src="@drawable/ic_refresh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Recurring Event"
                        android:textColor="@color/au_text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="This is a recurring event"
                    android:textColor="@color/au_text_dark" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/saveBar"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_save_disabled"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/saveIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="Save"
            android:src="@drawable/ic_doc"
            android:tint="@color/au_text_muted" />

        <TextView
            android:id="@+id/saveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Save Event"
            android:textColor="@color/au_text_muted"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
